{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["browser/dist/**/*"],
  "ts-node": { "files": true }
}
